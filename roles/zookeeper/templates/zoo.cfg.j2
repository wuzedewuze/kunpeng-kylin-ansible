# time unit in ZK
tickTime=2000
initLimit=10
syncLimit=5

# the directory where the snapshot is stored.
# [modify] snapshot dir
dataDir={{ zoo_data_dir }}
# [modify] transaction log dir
dataLogDir={{ zoo_log_dir }}

clientPort={{ zoo_listen_port }}
# [modify]


{% for host in groups['zookeeper'] %}
server.{{ hostvars[host]['host_id'] }}={{ host }}:{{ zoo_port1 }}:{{ zoo_port2 }}
{% endfor %}



# the maximum number of client connections.
# increase this if you need to handle more clients
# [modify]
maxClientCnxns=500

# [modify] set timeout, default range is 2 * tickTime to 20 * tickTime
minSessionTimeout=30000
maxSessionTimeout=60000


# The number of snapshots to retain in dataDir
autopurge.snapRetainCount=3
# Purge task interval in hours
# Set to "0" to disable auto purge feature
autopurge.purgeInterval=24



